<?xml version="1.0" encoding="utf-8"?>
<!-- src/AppBundle/Resources/config/doctrine/User.orm.xml -->
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="UserBundle\Entity\UserMail" table="user_mail">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <many-to-one field="creator" target-entity="UserBundle\Entity\User" inversed-by="userMails">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>
        <field name="sendTo" type="string" column="send_to" nullable="false">
        </field>
        <field name="message" type="string" column="message" nullable="false">
        </field>
        <field name="createDate" type="datetime" column="create_date" nullable="false">
        </field>
        <!--<one-to-many field="userEmails" target-entity="UserBundle\Entity\UserMail" mapped-by="creator" />-->
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="onPrePersist"/>
        </lifecycle-callbacks>
    </entity>
</doctrine-mapping>
