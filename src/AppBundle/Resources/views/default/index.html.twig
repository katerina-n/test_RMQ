{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<div class="login-container" style="max-width: 900px;">
    {{ form_start(form,{'attr': {}}) }}
        <h3>Drop Us a Message</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_widget(form.creator) }}
                </div>
                <div class="form-group">
                    {{  form_widget(form.sendTo) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.submit, {'attr': {'class': 'login-submit', 'style' : 'width: 100%'}}) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group" >
                    {{  form_widget(form.message, {'attr': {'style': 'width: 100%; height: 150px'}}) }}
                </div>
            </div>
        </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>
{% endblock %}